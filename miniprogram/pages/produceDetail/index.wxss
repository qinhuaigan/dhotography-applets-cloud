/* pages/produce/index.wxss */
page {
  background-color: #f4f4f4;
  padding-bottom: 140rpx;
}

rich-text {
  font-weight: normal;
  color: rgb(53, 53, 53);
  font-size: 30rpx;
  line-height: 20px;
}

.themeCar {
  width: 100%;
  padding: 0 30rpx;
  background-color: #fff;
  display: inline-block;
  box-sizing: border-box;
}

.themeCar .carTitle {
  font-size: 36rpx;
  line-height: 60rpx;
}

.themeCar .carDescription {
  font-size: 30rpx;
  line-height: 50rpx;
  color: #888;
}

.themeCar .carFooter {
  line-height: 60rpx;
  margin-top: 20rpx;
}

.themeCar .carMoney {
  color: rgb(245, 180, 62);
}

.themeCar .carFooterDes {
  font-size: 30rpx;
  color: #888;
  margin-left: 20rpx;
}

.themeCar .carBtn {
  font-size: 32rpx;
  line-height: 60rpx;
  padding: 0 50rpx;
  color: #fff;
  background-color: rgb(245, 180, 62);
  border-radius: 60rpx;
  vertical-align: middle;
}

.detailTitleText {
  color: rgb(53, 53, 53);
  font-weight: normal;
  padding: 6rpx 0 6rpx 20rpx;
  border-left: 8rpx solid rgb(53, 53, 53);
}

.detailTitleLine {
  height: 1px;
  margin: 20rpx -30rpx;
  background-color: #eee;
}

.textarea {
  min-height: 100px;
  margin-left: auto;
  margin-right: auto;
  outline: 0;
  font-size: 30rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
  overflow-x: hidden;
  overflow-y: auto;
  color: rgb(53, 53, 53);
  font-weight: normal;
}

.bottomMenu {
  width: 100%;
  /* height: 100rpx; */
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  line-height: 120rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 1000;
  background-color: #fff;
  box-shadow: 0 -2px 5px 2px #eee;
}

.bottomMenu .bottomMenuLeft {
  height: 100rpx;
  line-height: 100rpx;
  float: left;
  /* display: inline-block; */
  width: 30%;
  text-align: center;
  font-size: 28rpx;
  line-height: initial;
  vertical-align: middle;
}

.bottomMenu .bottomMenuLeft .leftBtn {
  display: inline-block;
  line-height: initial;
  vertical-align: middle;
}

.bottomMenu .bottomMenuRightBtn {
  float: left;
  box-sizing: border-box;
  width: 70%;
  /* display: inline-block; */
  background-color: rgb(245, 180, 62);
  line-height: 80rpx;
  vertical-align: middle;
  padding: 0 40rpx;
  text-align: center;
  border-radius: 80rpx;
  color: #fff;
  margin-top: 10rpx;
  font-size: 34rpx;
}

.carouselImg {
  height: 180px;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
}

.evaluateTabList .evaluateTab {
  line-height: 50rpx;
  background-color: #eee;
  border-radius: 25rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  display: inline-block;
  margin-right: 20rpx;
}

.userInfo {
  font-size: 30rpx;
}

.userInfo .userAvatar {
  width: 100%;
  padding-top: 100%;
  border-radius: 50%;
  background-size: cover;
  background-position: center;
}

.userInfo .evaluateTime {
  margin-top: 10rpx;
  color: #ccc;
}

.userEvaluateList .userEvaluateListItem {
  margin-bottom: 40rpx;
}

.userEvaluateListItem .evalueText {
  max-height: 90rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.evaluaImgList .evaluaImgItem {
  width: 100%;
  padding-top: 100%;
  background-size: cover;
  background-position: center;
}

.detailTitle .moreEvaluate {
  font-weight: normal;
  font-size: 30rpx;
  color: rgb(245, 180, 62);
}

.empty {
  color: #ccc;
  line-height: 400rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: normal;
}

.wux-rater {
  display: block !important;
}