/* pages/orderDetail/index.wxss */
page {
  padding-bottom: 0rpx;
}

.contentBox {
  margin-top: 2vh;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  padding: 20rpx 20rpx 100rpx 20rpx;
  min-height: 98vh;
  position: relative;
}

.imgBox {
  width: 100%;
  padding-top: 100%;
  background-size: cover;
  background-position: center;
}

.descriptionText {
  font-size: 32rpx;
  color: #ccc;
  margin: 20rpx 0;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.btnBox {
  width: 100%;
  display: flex;
  line-height: 100rpx;
  border-top: 1px solid #e8e8e8;
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 0;
}

.btnBox .btn {
  flex: 1;
  border-right: 1px solid #e8e8e8;
}

.btnBox .btn:last-child {
  border-right: none;
}