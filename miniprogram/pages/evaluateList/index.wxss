/* pages/evaluateList/index.wxss */
page {
  background-color: #f4f4f4;
  padding-bottom: 0;
}

.themeCar {
  width: 100%;
  padding: 0 30rpx;
  background-color: #fff;
  display: inline-block;
  box-sizing: border-box;
}

.themeCar .carTitle {
  font-size: 36rpx;
  line-height: 60rpx;
}

.themeCar .carDescription {
  font-size: 30rpx;
  line-height: 50rpx;
  color: #888;
}

.themeCar .carFooter {
  line-height: 60rpx;
  margin-top: 20rpx;
}

.themeCar .carMoney {
  color: rgb(245, 180, 62);
}

.themeCar .carFooterDes {
  font-size: 30rpx;
  color: #888;
  margin-left: 20rpx;
}

.themeCar .carBtn {
  font-size: 32rpx;
  line-height: 60rpx;
  padding: 0 50rpx;
  color: #fff;
  background-color: rgb(245, 180, 62);
  border-radius: 60rpx;
  vertical-align: middle;
}

.detailTitleText {
  color: rgb(53, 53, 53);
  font-weight: normal;
  padding: 6rpx 0 6rpx 20rpx;
  border-left: 8rpx solid rgb(53, 53, 53);
}

.detailTitleLine {
  height: 1px;
  margin: 20rpx -30rpx;
  background-color: #eee;
}

.evaluateTabList .evaluateTab {
  line-height: 50rpx;
  background-color: #eee;
  border-radius: 25rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  display: inline-block;
  margin-right: 20rpx;
}

.userInfo {
  font-size: 30rpx;
}

.userInfo .userAvatar {
  width: 100%;
  padding-top: 100%;
  border-radius: 50%;
  background-size: cover;
  background-position: center;
}

.userInfo .evaluateTime {
  margin-top: 10rpx;
  color: #ccc;
}

.userEvaluateList .userEvaluateListItem {
  margin-bottom: 40rpx;
}

.userEvaluateListItem .evalueText {
  margin-top: 20rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  word-break: break-all;
}

.evaluaImgList .evaluaImgItem {
  width: 100%;
  padding-top: 100%;
  background-size: cover;
  background-position: center;
}

.detailTitle .moreEvaluate {
  font-weight: normal;
  font-size: 30rpx;
  color: rgb(245, 180, 62);
}

.empty {
  color: #ccc;
  line-height: 400rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: normal;
}